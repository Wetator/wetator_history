<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>1.413</version><!-- which version of Jenkins is this plugin
            built against? -->
    </parent>

    <name>Wetator Report Plug-in</name>
    <groupId>org.wetator</groupId>
    <artifactId>wetator-jenkins-plugin</artifactId>
    <version>0.1</version>
    <packaging>hpi</packaging>

    <url>http://www.wetator.org</url>
    <issueManagement>
    	<system>Trac</system>
    	<url>https://www2.hosted-projects.com/trac/rbri/wetator/report</url>
    </issueManagement>
    <inceptionYear>2008</inceptionYear>
    <developers>
        <developer>
            <id>frank.danek</id>
            <name>Frank Danek</name>
        </developer>
    </developers>

    <!-- get every artifact through maven.glassfish.org, which proxies all
        the artifacts that we need -->
    <organization>
    	<name>wetator.org</name>
    	<url>http://www.wetator.org</url>
    </organization>
    <repositories>
        <repository>
            <id>m.g.o-public</id>
            <url>http://maven.glassfish.org/content/groups/public/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>m.g.o-public</id>
            <url>http://maven.glassfish.org/content/groups/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
